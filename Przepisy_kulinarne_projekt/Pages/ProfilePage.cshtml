@page
@model Przepisy_kulinarne_projekt.Areas.Identity.Pages.Account.Manage.ProfilePageModel
@{
    ViewData["Title"] = "Profil";
}

<div class="row text-center justify-content-center mt-5">
    <h1>@Model.User.Identity.Name  </h1>
    <a class="nav-item nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Edytuj profil">
        <img src="~/images/icons/gear.svg" style="float:right;width:30px;height:30px;"/>
    </a>
</div>

<h5 class="mt-3">Twoje przepisy</h5>
<div class="card-columns">
    @foreach (var item in Model.Recipes)
    {
    <a class="nav-item nav-link" asp-area="" asp-page="/AddARecipe/Details" asp-route-id="@item.Id" title="Szczegóły przepisu">
        <div class="card">
            <h5 class="card-body text-center">@item.RecipeName</h5>
        </div>
    </a>
    }
</div>

<h5 class="mt-3">Ulubione przepisy</h5>
<div class="card-columns">
    @foreach (var item in Model.FavouriteRecipes)
    {
    <a class="nav-link nav-item" asp-area="" asp-page="/AddARecipe/Details" asp-route-id="@item.Id" title="Szczegóły przepisu">
        <div class="card text-center">
            <h5 class="card-body">@item.Recipe.RecipeName</h5>
        </div>
    </a>
    }
</div>