@model Przepisy_kulinarne_projekt.Pages.AddARecipe.DeleteModel

@{
    ViewData["Title"] = "Usuwanie przepisu";
        }

<h3>Czy jesteś pewny, że chcesz usunąć ten przepis?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.RecipeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.RecipeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Ingredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Ingredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Steps)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Steps)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Date)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Recipe.Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
    </form>
</div>
