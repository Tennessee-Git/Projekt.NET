</p>

<script src="~/lib/jquery/dist/jquery.js"></script>

<script type="text/javascript">
    function changeRatingValue(isPlus) {
        var ratingValue = $('#RatingID').val();
        if (!isPlus) {
            $('#RatingID').val(ratingValue--);
        }
        else {
            $('#RatingID').val(ratingValue++);
        }
    }
</script>

