@page
@model Przepisy_kulinarne_projekt.Pages.AddARecipeCategory.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Czy na pewno chcesz usunąć kategorię?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeCategory.Recipe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeCategory.Recipe.Ingredients)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeCategory.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeCategory.Category.CategoryName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="RecipeCategory.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
