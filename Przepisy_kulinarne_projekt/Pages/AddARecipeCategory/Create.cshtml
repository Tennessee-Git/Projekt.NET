@page
@model Przepisy_kulinarne_projekt.Pages.AddARecipeCategory.CreateModel

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/table.css" rel="stylesheet" />
<link href="~/css/buttonprzepis.css" rel="stylesheet" />

<h1>Przypisz wybrany przepis do kategorii</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecipeCategory.RecipeId" class="control-label">Wybierz przepis</label>
                <select asp-for="RecipeCategory.RecipeId" class="form-control" asp-items="ViewBag.RecipeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RecipeCategory.CategoryId" class="control-label">Wybierz kategorię</label>
                <select asp-for="RecipeCategory.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Przypisz" class="myButton1" />
            </div>
        </form>
    </div>
</div>

<p>
    <h4>Nie ma kategorii, która cię interesuje?</h4></br>
    <a asp-page="/AddACategory/Create"><button type="button" class="myButton1">Dodaj nową kategorię</button></a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
