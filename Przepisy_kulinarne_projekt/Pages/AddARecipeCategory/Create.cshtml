@page
@model Przepisy_kulinarne_projekt.Pages.AddARecipeCategory.CreateModel

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/table.css" rel="stylesheet" />

<h1>Przypisz wybrany przepis do kategorii</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecipeCategory.RecipeId" class="control-label">Wybierz przepis</label>
                <select asp-for="RecipeCategory.RecipeId" class="form-control" asp-items="ViewBag.RecipeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RecipeCategory.CategoryId" class="control-label">Wybierz kategorię</label>
                <select asp-for="RecipeCategory.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Przypisz" class="btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
