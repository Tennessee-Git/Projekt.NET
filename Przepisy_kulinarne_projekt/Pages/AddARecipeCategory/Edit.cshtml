@page
@model Przepisy_kulinarne_projekt.Pages.AddARecipeCategory.EditModel

@{
    ViewData["Title"] = "Edit";
}
<link href="~/css/table.css" rel="stylesheet" />
<link href="~/css/buttonprzepis.css" rel="stylesheet" />
<h1>Edytuj</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RecipeCategory.Id" />
            <div class="form-group">
                <label asp-for="RecipeCategory.RecipeId" class="control-label"></label>
                <select asp-for="RecipeCategory.RecipeId" class="form-control" asp-items="ViewBag.RecipeId"></select>
                <span asp-validation-for="RecipeCategory.RecipeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeCategory.CategoryId" class="control-label"></label>
                <select asp-for="RecipeCategory.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="RecipeCategory.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="myButton" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color: #1073b5;" asp-page="./Index">Wroc do listy kategorii</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
